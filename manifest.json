{
    "name": "Movie Tracker",
    "description": "Track movies youâ€™ve watched or want to watch via Google Search.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://www.google.com/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": { "48": "icons/icon48.png" }
    },
    "content_scripts": [
        {
            "matches": ["https://www.google.com/search*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ]
}
